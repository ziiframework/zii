{
    "name": "ziiframework/zii",
    "description": "zii framework",
    "keywords": [
        "zii",
        "framework"
    ],
    "homepage": "https://github.com/ziiframework/zii",
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Yii Team",
            "email": "team@yiiframework.com",
            "homepage": "https://www.yiiframework.com/team",
            "role": "Founder and project lead"
        }
    ],
    "support": {
        "issues": "https://github.com/ziiframework/zii/issues?state=open",
        "source": "https://github.com/ziiframework/zii"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4.0",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "lib-pcre": "*",
        "cebe/markdown": "^1.0",
        "ezyang/htmlpurifier": "^4.13",
        "symfony/polyfill-php80": "^1.23",
        "ziiframework/composer": ">=3.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "cebe/indent": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "yii\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "yiiunit\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "ziiframework/composer": true
        }
    },
    "scripts": {
        "redo-install": [
            "rm -rf vendor/",
            "rm -f composer.lock",
            "@composer self-update -vvv",
            "@composer install -vvv"
        ]
    },
    "bin": [
        "src/yii"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
