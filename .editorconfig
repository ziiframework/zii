# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.xml]
indent_size = 2

[*.xml.dist]
indent_size = 2

[patch/*.diff]
insert_final_newline = false
trim_trailing_whitespace = false
